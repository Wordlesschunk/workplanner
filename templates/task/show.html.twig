{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ task.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ task.name }}</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>{{ task.notes }}</td>
        </tr>
        <tr>
            <th>Priority</th>
            <td>{{ task.priority }}</td>
        </tr>
        <tr>
            <th>Duration Seconds</th>
            <td>{{ task.requiredDurationSeconds }}</td>
        </tr>
        <tr>
            <th>Duration Complete</th>
            <td>{{ task.completedDurationSeconds }}</td>
        </tr>
        <tr>
            <th>Min Duration</th>
            <td>{{ task.eventMinDurationSeconds }}</td>
        </tr>
        <tr>
            <th>Max Duration</th>
            <td>{{ task.eventMaxDurationSeconds }}</td>
        </tr>
        <tr>
            <th>Schedule After</th>
            <td>{{ task.scheduleAfter ? task.scheduleAfter|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Due Date</th>
            <td>{{ task.dueDate ? task.dueDate|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_index') }}">back to list</a>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}